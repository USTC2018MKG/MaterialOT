<Application x:Class="MaterialOT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MaterialOT"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Common Label style -->
        <Style x:Key="commenLable">
            <Setter Property="Label.HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Label.VerticalContentAlignment" Value="Center"/>
            <Setter Property="Label.FontFamily" Value="Microsoft YaHei Light"/>
            <Setter Property="Label.FontSize" Value="20"/>
            <Setter Property="Label.Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
